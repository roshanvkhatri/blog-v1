<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="">Title</label>
    <input
      class="form-control"
      type="text"
      name="postTitle"
      autocomplete="off"
    />
  </div>
  <div class="form-group">
    <label for="">Post</label>
    <textarea
      class="form-control"
      rows="4"
      cols="50"
      type="text"
      name="postBody"
      autocomplete="off"
    ></textarea>
  </div>

  <button class="btn btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer"); -%>
